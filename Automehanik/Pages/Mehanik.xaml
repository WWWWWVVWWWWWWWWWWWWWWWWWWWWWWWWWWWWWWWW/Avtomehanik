<Page x:Class="Automehanik.Pages.Mehanik"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automehanik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mehanik">

    <Grid Background="white">

        <StackPanel Margin="20">
            <TextBlock Text="Элемент Автомобиля"/>
            <TextBox Name="CarPartTextBox" Margin="0,5"/>
            <TextBlock Text="Количество повреждений"/>
            <TextBox Name="DamageCountTextBox" Margin="0,5"/>
            <TextBlock Text="Элемент Автомобиля"/>
            <TextBox Name="OrderedPartsTextBox" Margin="0,5"/>
            <TextBlock Text="Заказанные детали"/>
            <TextBox Name="OrderedFluidsTextBox" Margin="0,5"/>
            <Button Content="Сохранить" Name="SaveButton" Click="SaveButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
