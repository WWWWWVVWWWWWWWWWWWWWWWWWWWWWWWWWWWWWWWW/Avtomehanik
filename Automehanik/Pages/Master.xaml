<Page x:Class="Automehanik.Pages.Master"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automehanik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Master">

    <Grid Background="white">
        <TabControl>
            <TabItem Header="Сотрудники">
                <StackPanel>
                    <Button Content="Добавить сотрудника" Name="AddEmployee" Click="AddEmployee_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Заказы"/>
            <TabItem Header="Смены">
                <StackPanel>
                    <Button Content="Создать новую смену" Name="NewSmena" Click="NewSmena_Click"/>
                    </StackPanel>
            </TabItem>
            
        </TabControl>
        
    </Grid>
</Page>
